source "https://rubygems.org"

# Lock to GitHub Pages (uses Jekyll 3.9.3)
gem "github-pages", group: :jekyll_plugins

# Optional: open links in new tab (works fine)
gem "jekyll-target-blank"

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.6"
end

# Fix compatibility issues on Ruby 3.1+
gem "ffi", ">= 1.15.5"
gem "rexml", "~> 3.4"
